extends ../layout

block content
    .container
        h1 Collection
        form(method='POST')
            .input-group
                input(type='url' name='url')
                .input-group-append
                    button.btn.btn-primary
                        i.fas.fa-plus.text-white
        each bookmark in bookmarks
            h2= bookmark.title
            a(href=bookmark.editUrl title='Edit').mr-1.text-secondary
                i.fas.fa-edit
            a(href=bookmark.url)= bookmark.url
            p= bookmark.description