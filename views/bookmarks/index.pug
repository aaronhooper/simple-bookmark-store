extends ../layout

block content
    .container
        h1 Collection
        form(method='POST')
            .input-group
                input(type='url' name='url')
                .input-group-append
                    button.btn.btn-primary
                        i.fas.fa-plus.text-white
        each bookmark in bookmarks
            .card.w-75.p-1.my-2
                .card-body
                    h2.card-title= bookmark.title
                    a(href=bookmark.url)= bookmark.url
                    a(href=bookmark.editUrl title='Edit').card-subtitle.ml-1.text-secondary
                        i.fas.fa-edit
                    p.card-text= bookmark.description